<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androidapp.chowdhury.emran.arclcricketscorer.ScoreActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="25dp">


        <TextView
            android:id="@+id/tvSelectBt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Batsman 1:"
            android:layout_marginRight="25dp"/>

        <Spinner
            android:id="@+id/spBt1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"

            app:spinnerMode="dropdown" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/tvSelectBt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Batsman 2: "
            android:layout_marginRight="25dp"/>

        <Spinner
            android:id="@+id/spBt2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/tvSelectBl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Bowler: "
            android:layout_marginRight="50dp"/>

        <Spinner
            android:id="@+id/spBl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Scoring"
            android:onClick="beginScoring"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
</LinearLayout>
